extends layout

block content
  #banner.mt-4.mb-4.pb-2.border.border-dark.border-top-0.border-right-0.border-left-0
    .row
      .col-lg-12
        h1 Starcups
  .row  
    .col-xs-12.col-sm-9
      .row
        .col-xs-12.col-sm-6
          p.text-warning
            i.fas.fa-star
            i.fas.fa-star
            i.fas.fa-star
            i.far.fa-star
            i.far.fa-star
          p.font-italic 125 High Street, Reading, RG6 1PS
          .card
            .card-header.bg-primary
              h3.card-title Opening hours
            .card-body
              p.card-text Monday - Friday : 7:00am - 7:00pm
              p.card-text Saturday : 8:00am - 5:00pm
              p.card-text Sunday : closed
          .card
            .card-header.bg-primary
              h3.card-title Facilities
            .card-body
              span.badge.badge-warning
                span.h6
                  i.fas.fa-check.fa-xs
                  &nbsp;Hot drinks
              &nbsp;
              span.badge.badge-warning
                span.h6
                  i.fas.fa-check.fa-xs
